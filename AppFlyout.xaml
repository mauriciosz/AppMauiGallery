<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:pages="clr-namespace:AppMAUIGalery.Views"
            x:Class="AppMAUIGalery.AppFlyout"
            Title="AppFlyout"
            FlyoutLayoutBehavior="Popover"> <!-- esse "Popover" faz ter menu lateral que se recolhe mesmo no windows, algo que só é padrao no Mobile -->
    <FlyoutPage.Flyout>
        <pages:Menu/> <!-- aqui monta o menu lateral, aquele das 3 barrinhas (pontinhos) -->
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <pages:MainPage/> <!-- Aqui monta a pagina principal  ligada ao FlyoutPage -->
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>